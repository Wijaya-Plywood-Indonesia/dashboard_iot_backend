# PERBAIKAN: Pastikan file .env ada di root folder (sejajar dengan package.json)
JWT_SECRET=your_super_secure_jwt_secret_key_min_32_characters_long_2024_dashboard
NODE_ENV=development
PORT=5000

# Database
DATABASE_URL="file:./dev.db"

# MQTT Configuration  
MQTT_BROKER_URL=mqtt://broker.hivemq.com:1883
MQTT_TOPIC=esp32/suhu

# Frontend
FRONTEND_URL=http://localhost:5173

# Buffer Management
MAX_BUFFER_SIZE=1000
BUFFER_CLEANUP_THRESHOLD=800
CREATE_INTERPOLATED_DATA=false

# Rate Limiting
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT_MAX_REQUESTS=10